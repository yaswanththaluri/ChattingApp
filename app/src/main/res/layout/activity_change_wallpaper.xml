<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangeWallpaper">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="3"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/wallpaper1"
                android:id="@+id/wallpaper1"
                android:layout_margin="10dp"
                android:contentDescription="@string/wallpaper1"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:id="@+id/wallpaper2"
                android:src="@drawable/wallpaper2"
                android:layout_margin="10dp"
                android:contentDescription="@string/wallpaper2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="center"
                android:layout_weight="1"
                android:src="@drawable/wallpaper3"
                android:id="@+id/wallpaper3"
                android:layout_margin="10dp"
                android:contentDescription="@string/wallpaper3"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:id="@+id/wallpaper4"
                android:scaleType="center"
                android:layout_weight="1"
                android:src="@drawable/wallpaper_four"
                android:contentDescription="@string/wallpaper3"/>
        </LinearLayout>

    </GridLayout>

</LinearLayout>